<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOne"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".Addition">

    <RelativeLayout
        android:id="@+id/relativeLayoutStartGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayoutLevel"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_above="@+id/textViewScoreLabel"
            android:layout_below="@+id/textViewLevel"
            android:layout_marginTop="@dimen/activity_vertical_margin_m"
            android:layout_marginBottom="@dimen/activity_vertical_margin_m"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/level1"
                style="@style/CalculusLevelButtonStyle"
                android:layout_column="0"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:tag="10"
                android:text="@string/level_0_10" />

            <TextView
                style="@style/CalculusLevelButtonStyle"
                android:id="@+id/level2"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@color/coloCorrectAns"
                android:layout_row="0"
                android:tag="15"
                android:text="@string/level_0_15" />

            <TextView
                style="@style/CalculusLevelButtonStyle"
                android:id="@+id/level3"
                android:layout_column="0"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_row="1"
                android:padding="@dimen/activity_vertical_margin_m"
                android:tag="20"
                android:text="@string/level_0_20" />

            <TextView
                style="@style/CalculusLevelButtonStyle"
                android:id="@+id/level4"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_row="1"
                android:tag="25"
                android:text="@string/level_0_25" />

        </GridLayout>

        <TextView
            android:id="@+id/textViewScoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_final_score"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_above="@+id/textViewFinalScore"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_final_score"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/buttonStartGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_start"
            android:background="@color/coloBlack20"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:onClick="startGame"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutCalculus"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/addition"
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/gridLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayoutTop">

            <TextView
                style="@style/CalculusQuestionStyle"
                android:id="@+id/text_number_one"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:text="1" />

            <TextView
                style="@style/CalculusQuestionStyle"
                android:id="@+id/text_symbol"
                android:layout_column="0"
                android:layout_row="1"
                android:text="+" />

            <TextView
                style="@style/CalculusQuestionStyle"
                android:id="@+id/text_number_two"
                android:layout_column="1"
                android:layout_row="1"
                android:text="00" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_m"
            android:id="@+id/gridLayoutAnswers"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_below="@+id/gridLayout3"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/answer1"
                style="@style/CalculusAnswerButtonStyle"
                android:layout_column="0"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:tag="0"
                android:text="1" />

            <TextView
                style="@style/CalculusAnswerButtonStyle"
                android:id="@+id/answer2"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_row="0"
                android:tag="1"
                android:text="2" />

            <TextView
                style="@style/CalculusAnswerButtonStyle"
                android:id="@+id/answer3"
                android:layout_column="0"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_row="1"
                android:padding="@dimen/activity_vertical_margin_m"
                android:tag="2"
                android:text="3" />

            <TextView
                style="@style/CalculusAnswerButtonStyle"
                android:id="@+id/answer4"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_row="1"
                android:tag="3"
                android:text="4" />

        </GridLayout>

        <TextView
            android:id="@+id/textViewClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutAnswers"
            android:layout_above="@+id/bottom_layout"
            android:layout_marginTop="@dimen/activity_vertical_margin_m"
            android:layout_marginBottom="@dimen/activity_vertical_margin_m"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="60sp"/>

        <ImageView
            android:id="@+id/imageViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:srcCompat="@drawable/correct"
            android:layout_below="@+id/gridLayoutAnswers"
            android:layout_above="@+id/bottom_layout"
            android:layout_marginTop="@dimen/activity_vertical_margin_m"
            android:layout_marginBottom="@dimen/activity_vertical_margin_m"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/textViewScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0/0"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/coloBlack20"
                android:text="@string/next"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>


