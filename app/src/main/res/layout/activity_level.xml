<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_level"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Level">

    <TextView
        android:id="@+id/textView_levelHeading"
        style="@style/LevelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_difficulty_level"/>

    <GridLayout
        android:id="@+id/gridLayoutLevel"
        android:layout_below="@+id/textView_levelHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:columnCount="1"
        android:rowCount="4">

        <Button
            android:id="@+id/level1"
            style="@style/LevelButtonStyle"
            android:layout_column="0"
            android:layout_row="0"
            android:tag="10"
            android:background="@drawable/button_easy"
            android:text="@string/easy" />

        <Button
            android:id="@+id/level2"
            style="@style/LevelButtonStyle"
            android:layout_column="0"
            android:layout_row="1"
            android:tag="15"
            android:background="@drawable/button_medium"
            android:text="@string/medium" />

        <Button
            android:id="@+id/level3"
            style="@style/LevelButtonStyle"
            android:layout_column="0"
            android:layout_row="2"
            android:tag="20"
            android:background="@drawable/button_hard"
            android:text="@string/hard" />

        <Button
            android:id="@+id/level4"
            style="@style/LevelButtonStyle"
            android:layout_column="0"
            android:layout_row="3"
            android:tag="25"
            android:background="@drawable/button_expert"
            android:text="@string/expert" />

    </GridLayout>


</RelativeLayout>