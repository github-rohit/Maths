<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView_answers_list">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="right|bottom">

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="-18dp"
            android:gravity="right|clip_vertical"
            android:fontFamily="Roboto"
            android:shadowColor="@color/coloBlack"
            android:shadowRadius="1"
            android:textColor="@color/colorWhite"
            android:textSize="64dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/activity_horizontal_margin_sm"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin_sm"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin_d"
            android:paddingRight="@dimen/activity_vertical_margin_d"
            android:textStyle="bold"
            android:textSize="18sp"
            android:visibility="gone"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_vertical_margin_d"
        android:paddingRight="@dimen/activity_vertical_margin_d">

        <TextView
            android:fontFamily="@font/coming_home"
            android:id="@+id/textView_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />

        <TextView
            android:fontFamily="@font/coming_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", " />

        <TextView
            android:fontFamily="@font/coming_home"
            android:id="@+id/textView_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin_sm"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_vertical_margin_d"
            android:paddingRight="@dimen/activity_vertical_margin_d">

            <TextView
                android:fontFamily="casual"
                android:id="@+id/textView_answerCorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp" />

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:fontFamily="casual"
                android:id="@+id/textView_answerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_correct" />

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", and " />

            <TextView
                android:fontFamily="casual"
                android:id="@+id/textView_wrongAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp" />

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <TextView
                android:fontFamily="casual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_incorrect" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>