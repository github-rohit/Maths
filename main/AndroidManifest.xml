<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nirmalrohit.maths">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:resizeableActivity="false"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Quiz"
            android:label="@string/quiz"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity android:name=".Calculus" />
        <activity
            android:name=".TimesTables"
            android:label="@string/title_activity_times_tables"
            android:theme="@style/AppTheme.NoActionBar"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Level"
            android:label="@string/level"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Quizzes"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:label="@string/select_category"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" />
        <activity android:name=".QuizResult"
            android:theme="@style/AppTheme.NoActionBar"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"/>
    </application>

</manifest>